@model Blog.Models.Posts
@using Blog.DAL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Single Post</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <!-- Bootstrap styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font-Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- Google Webfonts -->
    <link href="~/Content/css.css" rel="stylesheet" type='text/css' />
    <!-- Styles -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <script src="js/vendor/google/html5-3.6-respond-1.1.0.min.js"></script>
    <![endif]-->

</head>
<body>
    <header>
        <div class="widewrapper masthead">
            <div class="container">
                <div id="mobile-nav-toggle" class="pull-right">
                    <a href="#" data-toggle="collapse" data-target=".clean-nav .navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>

                <nav class="pull-right clean-nav">
                    <div class="collapse navbar-collapse">
                        <ul class="nav nav-pills navbar-nav">

                            <li>
                                <a href="/Home/Index">主页</a>
                            </li>
                            <li>
                                <a href="/Home/About">关于</a>
                            </li>
                            <li>
                                <a href="/Home/Contact">联系我</a>
                            </li>
                        </ul>
                    </div>
                </nav>

            </div>
        </div>

        <div class="widewrapper subheader">
            <div class="container">
                <div class="clean-breadcrumb">
                    <a href="/Home/Index">博客</a>
                </div>


                <div class="clean-searchbox">
                    <form action="#" method="get" accept-charset="utf-8">

                        <input class="searchfield" id="searchbox" type="text" placeholder="Search">
                        <button class="searchbutton" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="widewrapper main">
        <div class="container">
            <div class="row">
                <div class="col-md-8 blog-main">
                    <article class="blog-post">

                        <div class="body">
                            <h1>@Model.Title</h1>
                            <div class="meta">
                                <i class="fa fa-user"></i> DannyJyc <i class="fa fa-calendar"></i>@Model.CreateDate<i class="fa fa-comments"></i>@Model.Click 访问
                            </div>
                            <span>@Model.Content</span>
          
                        </div>
                    </article>
                    <script>
                        function ValueChange(id) {
                            document.getElementById("SecondReply").value = id;
                        }
                        function getCount() {
                            var count = document.getElementsByTagName("article").length;
                            document.getElementById("demo").innerHTML = count-1+" 回复";
                        }

                        window.onload = getCount;
                    </script>

                    <aside class="comments" id="comments">
                        <hr>

                        <h2><i class="fa fa-comments"></i>&nbsp;&nbsp;<span id="demo"></span> </h2>
                        @foreach (var reply in ViewBag.reply)
                        {
                            <article class="comment">
                                <header class="clearfix">
                                    <div class="meta">
                                        <h3>@reply.Name</h3>
                                        <span class="date">
                                            @reply.CreateDate
                                        </span>
                                        <span class="separator">
                                            -
                                        </span>

                                        <a href="#create-comment" onclick="ValueChange(@reply.ReplyId)" class="reply-link">回复</a>
                                    </div>
                                </header>
                                <div class="body">
                                    @reply.ReplyContent
                                </div>
                            </article>
                            foreach (var replysc in GetValue.ListReplySecond(reply.PostsId, reply.ReplyId))
                            {
                                <article class="comment reply">
                                    <header class="clearfix">
                                        <div class="meta">
                                            <h3>@replysc.Name</h3>
                                            <span class="date">
                                                @replysc.CreateDate
                                            </span>
                                            <span class="separator">
                                                -
                                            </span>
                                        </div>
                                    </header>
                                    <div class="body">
                                        @replysc.ReplyContent
                                    </div>
                                </article>
                            }
                        }

                    </aside>

                    <aside class="create-comment" id="create-comment">
                        <hr>

                        <h2><i class="fa fa-pencil"></i> 添加回复</h2>

                        <form action="/Home/Single/@Model.PostsId" method="Post" accept-charset="utf-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="Name" id="contact-name" placeholder="名字/昵称" class="form-control input-lg">
                                </div>
                                <div class="col-md-6">
                                    <input type="email" name="Email" id="contact-email" placeholder="邮箱" class="form-control input-lg">
                                </div>
                            </div>
                            <textarea rows="10" name="ReplyContent" id="contact-body" placeholder="信息" class="form-control input-lg"></textarea>
                            <input type="hidden" name="SecondReply" id="SecondReply" value="" />
                            <div class="buttons clearfix">
                                <button type="submit" class="btn btn-xlarge btn-clean-one" id="btnSubmit">提交</button>
                            </div>
                        </form>
                    </aside>
                </div>
                <aside class="col-md-4 blog-aside">

                    <div class="aside-widget">
                        <header>
                            <h3>精选文章</h3>
                        </header>
                        <div class="body">
                            <ul class="clean-list">
                                @{ int t = 6;}
                                @foreach (var title in ViewBag.sellist)
                                {
                                    if (t == 0)
                                    {
                                        break;
                                    }
                                    <li><a href="/Home/Single/@title.PostsId">@title.Title</a></li>
                                    t--;
                                }
                            </ul>
                        </div>
                    </div>



                    <div class="aside-widget">
                        <header>
                            <h3>标签</h3>
                        </header>
                        <div class="body clearfix">
                            <ul class="tags">

                                @foreach (var tag in ViewBag.tag)
                                {
                                    <li><a href="/Home/Index/@tag.TagId">@tag.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>

    <footer>
        <div class="widewrapper footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 footer-widget">
                        <h3> <i class="fa fa-user"></i>About</h3>

                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab animi laboriosam nostrum consequatur fugiat at, labore praesentium modi, quasi dolorum debitis reiciendis facilis, dolor saepe sint nemo, earum molestias quas.</p>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorum, error aspernatur assumenda quae eveniet.</p>
                    </div>

                    <div class="col-md-4 footer-widget">
                        <h3> <i class="fa fa-pencil"></i> Recent Post</h3>
                        <ul class="clean-list">
                            @{ int i = 6;}
                            @foreach (var title in ViewBag.newsposts)
                            {
                                if (i == 0)
                                {
                                    break;
                                }
                                <li><a href="/Home/Single/@title.PostsId">@title.Title</a></li>
                                i--;
                            }
                        </ul>
                    </div>

                    <div class="col-md-4 footer-widget">
                        <h3> <i class="fa fa-envelope"></i>Contact Me</h3>

                        <p>Lorem ipsum dolor sit amet Lorem ipsum dolor sit amet.</p>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nihil fugiat, cupiditate veritatis excepturi tempore explicabo.</p>

                    </div>

                </div>
            </div>
        </div>
        <div class="widewrapper copyright">
            Copyright 2015
        </div>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</body>
</html>

