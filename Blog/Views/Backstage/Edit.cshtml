            @*<input name="Tag" id="Tags" /><span style="color: grey;">(多个标签之间用“,”分隔)</span>
                <div style="border: 1px solid black;">
                    添加已有标签<br />
                    @foreach (var tag in ViewBag.tag)
                    {
                        <input type="checkbox" name="Tag" id="Tag" @if(GetValue.IfTag(Model.PostsId,tag)){@:checked="checked"
                                                                   } value=@tag>@tag<br />
                    }
                </div>*@
            点击数
            <input type="hidden" name="Click" id="Click" value=@Model.Click>@Model.Click<br />
            <input type="submit" class="btn-primary" value="修改" />
        </form>
    </div>
</div>
<script type="text/javascript">

    //实例化编辑器
